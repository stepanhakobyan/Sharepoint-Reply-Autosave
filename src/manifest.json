{
  "name": "SharePoint Reply Autosave",
  "manifest_version": 2,
  "version": "2.0.1",
  "description": "The extension automatically saves draft replies every 30 seconds, and allows to return them as needed.",
  "author": "Stepan Hakobyan",
  "icons": {
    "16": "icons/Microsoft-SharePoint-2013-icon_16.png",
    "20": "icons/Microsoft-SharePoint-2013-icon_20.png",
    "24": "icons/Microsoft-SharePoint-2013-icon_24.png",
    "32": "icons/Microsoft-SharePoint-2013-icon_32.png",
    "48": "icons/Microsoft-SharePoint-2013-icon_48.png",
    "64": "icons/Microsoft-SharePoint-2013-icon_64.png",
    "72": "icons/Microsoft-SharePoint-2013-icon_72.png",
    "96": "icons/Microsoft-SharePoint-2013-icon_96.png",
    "128": "icons/Microsoft-SharePoint-2013-icon_128.png",
    "256": "icons/Microsoft-SharePoint-2013-icon_256.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/Microsoft-SharePoint-2013-icon_16.png",
      "20": "icons/Microsoft-SharePoint-2013-icon_20.png",
      "24": "icons/Microsoft-SharePoint-2013-icon_24.png",
      "32": "icons/Microsoft-SharePoint-2013-icon_32.png",
      "48": "icons/Microsoft-SharePoint-2013-icon_48.png",
      "64": "icons/Microsoft-SharePoint-2013-icon_64.png",
      "72": "icons/Microsoft-SharePoint-2013-icon_72.png",
      "96": "icons/Microsoft-SharePoint-2013-icon_96.png",
      "128": "icons/Microsoft-SharePoint-2013-icon_128.png",
      "256": "icons/Microsoft-SharePoint-2013-icon_256.png"
    },
    "default_title": "SharePoint 2016 Reply Autosave",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://server2016.armsoft.am/Lists/Review/Flat.aspx*",
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  }
}